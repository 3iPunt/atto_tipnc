{{!
  @template atto_tipnc/body_component


}}
<div id="atto_tipnc-body" data-region="atto_tipnc_body">

    <div class="atto_tipnc_header">

        <section id="atto_tipnc">
            {{#str}} instructions, atto_tipnc {{/str}}

            <div id="file_url_button" data-region="file_url">
                <a href="{{ url }}"  class="btn btn-secondary btn-sm" target="_blank">
                    {{# str }} url_button, atto_tipnc, {{ typename }} {{/ str }}
                </a>
            </div>

        </section>

        <form class="atto_form">
            <div id="id_introeditor_" class="mdl-align">
                <label for="id_introeditor_tipnc_url">{{#str}} enterurl, atto_tipnc {{/str}}</label>:
                <input class="urlcontrol" id="id_introeditor_tipnc_url" name="id_introeditor_tipnc_url" value="">
                <br>
                <label for="id_introeditor_tipnc_size">{{#str}} entersize, atto_tipnc {{/str}}</label>:
                <input class="sizecontrol" id="id_introeditor_tipnc_size" name="id_introeditor_tipnc_size" value="600">
                <br>
                <button class="atto_media_urlentrysubmit btn btn-primary">
                    {{#str}} insert, atto_tipnc {{/str}}
                </button>
            </div>
        </form>

    </div>

    <div class="atto_tipnc_iframe">
        <div class="hide_header"></div>
        <iframe id="file_nextcloud_iframe" class='tipnc-iframe'
                src="{{ url }}" width="100%" height="450px" align="top" frameborder="0">
        </iframe>
    </div>


</div>

